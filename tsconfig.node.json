{
  "compilerOptions": {
    "target": "ESNext",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,                                      /* Enable all strict type-checking options. */
    "noImplicitAny": false,
  },
  "include": ["vite.config.ts", "electron", "package.json"]
}
